%ul
  - if ::Refinery::References::Admin::CategoriesController.searchable?
    %li
      = render '/refinery/admin/search', :url => refinery.references_admin_categories_path
  %li
    = link_to t('.create_new'), refinery.new_references_admin_category_path, :class => "add_icon"
  - if !searching? && ::Refinery::References::Admin::CategoriesController.sortable? && ::Refinery::References::Category.any?
    %li
      = link_to t('.reorder', :what => "Categories"), refinery.references_admin_categories_path, :id => "reorder_action", :class => "reorder_icon"                      |
      = link_to t('.reorder_done', :what => "Categories"), refinery.references_admin_categories_path, :id => "reorder_action_done", :style => "display: none;", :class => "reorder_icon"
