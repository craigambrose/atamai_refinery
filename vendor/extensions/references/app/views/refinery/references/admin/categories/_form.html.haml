= semantic_form_for [refinery, :references_admin, @category] do |f|
  = render '/refinery/admin/error_messages', :object => @category, :include_object_name => true

  = f.inputs do
    = f.input :title, :input_html => {:class => 'larger widest'}
    = f.input :slug
  
  = render '/refinery/admin/form_actions', :f => f, :continue_editing => false, :delete_title => t('delete', :scope => 'refinery.categories.admin.categories.category'), :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @category.title)
